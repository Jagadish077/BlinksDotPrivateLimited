<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/static/main.css">
    <link href="/static/fontawesome-free-5.14.0-web/css/all.css" rel="stylesheet">
    <link rel="shortcut icon" href="#">
    <title>Covid19Tracker</title>
</head>

<body>
    {{{body}}}
    <script src="/static/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var death = document.querySelector('.deaths').innerHTML;
        var active = document.querySelector('.active').innerHTML;
        var confirmed = document.querySelector('.confirmed').innerHTML;
        var recovered = document.querySelector('.recovered').innerHTML;
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: [`deaths:${death}`,`active:${active}`, `confirmed:${confirmed}`, `recovered:${recovered}`],
        datasets: [{
            label: "#stay at home..stay safe",
            data: [death, active, confirmed, recovered],
            options: {
                events: ['events']
            },       
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true,
                    callback:  (value, index, values) => {
                        return value
                    }
                }
            }]
        }
    }
});
    </script>
    
</body>

</html>